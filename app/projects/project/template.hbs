<h2>Title: {{model.title}}</h2>
<h4>Description: {{model.description}}</h4>
<br>
<div class="add-shot">
	<div class="field">
		<span>Title:</span> {{input value=title}}
	</div>

	<div class="field">
		<span>Description:</span> {{input value=description}}
	</div>

	<button {{action 'addShot'}}>Add Shot</button>
</div>
<br>

{{#if model.shots}}
	<span>You have {{model.shots.length}} shots in your project</span>
{{/if}}

<div class="shots">
	{{#each model.shots as |shot| }}
		<div class="shot">
			<h4>
				{{#link-to 'projects.project.shots' shot }}
					{{ shot.title }}
				{{/link-to}}
			</h4>
		</div>
	{{/each}}
</div>

{{outlet}}
